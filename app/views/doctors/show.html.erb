<h1>Doctor <%= @doctor.name %></h1>

<h3>Information:</h3>
<h3>Hospital: <%= @doctor.hospital_name %></h3>
<h3>Specialty: <%= @doctor.specialty %></h3>
<h3>Education: <%= @doctor.university %></h3>
<div id="patients">
<h3>Patients:</h3>
  <% @doctor.patients.each do |patient| %>
    <section id="patient-<%= patient.id %>">
      <p><%= patient.name %></p>
      <p><%= button_to 'Remove Patient', "/doctor_patients/#{@doctor_patient.id}", method: :delete %></p>
    </section>
  <% end %>
</div>